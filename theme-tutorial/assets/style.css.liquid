* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  background: #f6f6f6;
  color: #000;
  font-family: system-ui, -apple-system;
}
li {
  list-style: none;
}

.footer {
  background-color: #fff;
  padding: 60px 0;
}

.width {
  max-width: 1100px;
  margin: 0 auto;
  width: 90%;
}

.footer-top {
  display: flex;
  flex-direction: column;
  gap: 40px;
}
.footer-column h2 {
  font-size: 13px;
}
.footer-cards {
  display: inline-flex;
  flex-direction: row;
  gap: 10px;
  align-items: center;
}

.footer-cards li {
  list-style: none;
}
